{
	"$schema": "http://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.json",
	"exclude": ["./src/**/*.d.ts", "./src/index-esm.ts"],
	"include": ["./src/**/*"],
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2018",
		"declaration": false,
		"lib": ["es2020", "es2021", "esnext"],
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": false
	}
}
