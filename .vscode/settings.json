{
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[yaml]": {
		"editor.defaultFormatter": "redhat.vscode-yaml"
	},

	"javascriptBooster.formattingOptions": {
		"quote": "single",
		"useTabs": true,
		"trailingComma": true,
		"arrowParensAlways": true,
		"objectCurlySpacing": true,
		"arrayBracketSpacing": false,
		"tabWidth": 2,
		"wrapColumn": 80
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.foldingImportsByDefault": true,
	"editor.formatOnPaste": false,
	"editor.formatOnSave": true,
	"editor.suggest.showDeprecated": false,
	"eslint.lintTask.enable": true,
	"eslint.validate": ["javascript", "typescript"],
	"javascript.preferences.importModuleSpecifier": "relative",
	"javascript.preferences.importModuleSpecifierEnding": "js",
	"javascript.updateImportsOnFileMove.enabled": "always",
	"json.format.enable": false,
	"json.schemas": [

		{
			"url": "./datasworn/datasworn.schema.json",
			"fileMatch": ["datasworn/*/*.json", "source_data/**/*.error.json"]
		}
	],
	"json.validate.enable": true,
	"prettier.documentSelectors": ["*.ts", "*.json", "*.yaml"],
	"prettier.enable": true,
	"prettier.requireConfig": false,
	"typescript.preferences.importModuleSpecifier": "relative",
	"typescript.preferences.importModuleSpecifierEnding": "js",
	"typescript.suggest.jsdoc.generateReturns": false,
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"yaml-plus-json": {
		"convertOnRename": true,
		"fileExtensions": {
			"json": ".json",
			"yaml": ".yaml"
		},
		"yamlIndent": 2
	},
	"yaml.completion": true,
	"yaml.disableAdditionalProperties": true,
	"yaml.disableDefaultProperties": false,
	"yaml.format.enable": true,
	"yaml.format.singleQuote": true,
	"yaml.schemas": {
		"source_data/datasworn-source.schema.json": ["source_data/**/*.yaml"]
	},
	"yaml.suggest.parentSkeletonSelectedFirst": true,
	"editor.formatOnSaveMode": "modificationsIfAvailable",
	"eslint.codeActionsOnSave.mode": "problems",
	"javascript.preferences.quoteStyle": "single",
	"typescript.preferences.quoteStyle": "single",
	"eslint.probe": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"html",
		"markdown"
	],
	"eslint.useESLintClass": true,
	"eslint.run": "onSave"
}
