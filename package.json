{
	"name": "dataforged",
	"version": "2.0.0-2",
	"description": "Official content and rules data for the Ironsworn: Starforged tabletop role-playing game, formatted as JSON for use in community tools. ðŸš€ Includes JSON schemas and a Javascript/Typescript API.",
	"type": "commonjs",
	"exports": {
		".": {
			"import": "./dist/index.js"
		}
	},
	"types": "./dist/types/index.d.ts",
	"scripts": {
		"build:tools": "tsc --project tsconfig.json ; tsc-alias -p tsconfig.json ./dist",
		"build:inputSchema": "node ./dist/scripts/build-input-schema.js",
		"build:dts": "ts-node ./src/type-gen/json-schema-to-typescript.ts",
		"readme": "npx @appnest/readme generate -i ./src/templates/blueprint.md ./ -c ./src/templates/blueprint.json"
	},
	"files": [
		"dist",
		"docs",
		"img",
		"markdown"
	],
	"directories": {
		"doc": "./docs"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/rsek/dataforged.git"
	},
	"keywords": [
		"ironsworn",
		"starforged",
		"TTRPG"
	],
	"author": {
		"name": "rsek",
		"email": "r.sekouri@gmail.com",
		"url": "https://github.com/rsek"
	},
	"license": "SEE LICENSE IN LICENSE.md",
	"bugs": {
		"url": "https://github.com/rsek/dataforged/issues"
	},
	"homepage": "https://rsek.github.io/dataforged",
	"readme": "https://rsek.github.io/dataforged",
	"devDependencies": {
		"@swc/core": "^1.3.34",
		"@types/json-schema": "^7.0.11",
		"@types/lodash-es": "^4.17.6",
		"@types/node": "^18.13.0",
		"@typescript-eslint/eslint-plugin": "^5.51.0",
		"@typescript-eslint/parser": "^5.51.0",
		"ajv": "^8.12.0",
		"ajv-formats": "^2.1.1",
		"class-validator": "^0.14.0",
		"class-validator-jsonschema": "^5.0.0",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-config-standard-with-typescript": "^34.0.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-n": "^15.6.1",
		"eslint-plugin-no-relative-import-paths": "^1.5.2",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-tsdoc": "^0.2.17",
