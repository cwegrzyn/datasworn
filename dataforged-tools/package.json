{
  "name": "dataforged-tools",
  "version": "0.5.3",
  "description": "Internal tools used to build Dataforged's JSON and types.",
  "private": true,
  "main": "./build/index.js",
  "exports": {
    ".": {
      "import": "./build/index.js"
    }
  },
  "files": [
    "build"
  ],
  "type": "module",
  "scripts": {
    "pkg": "yarn render-json && yarn docs",
    "build": "yarn compile && yarn schema",
    "compile": "yarn flush && npx ttsc --project ./tsconfig.json",
    "schema": "yarn dts && node ./build/utils/writeSchema.js",
    "render-json": "yarn render-json-sf && yarn render-json-is",
    "flush": "rm -R ./build && mkdir ./build",
    "flush-image": "rm -R ./img && mkdir ./img",
    "dts": "api-extractor run -c ./api-extractor.json && cp ../src/types/index.d.ts ../dist/types/index.d.ts",
    "render-json-sf": "node ./build/start-starforged.js --enable-source-maps",
    "render-json-is": "node ./build/start-ironsworn.js --enable-source-maps",
    "render-md-sf": "node ./build/start-md.js",
    "docs": "rm -R ../docs && mkdir ../docs && npx typedoc"
  },
  "directories": {
    "doc": "./docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rsek/dataforged.git"
  },
  "keywords": [
    "ironsworn",
    "starforged",
    "TTRPG"
  ],
  "author": "rsek",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/rsek/dataforged/issues"
  },
  "homepage": "https://github.com/rsek/dataforged#readme",
  "devDependencies": {
    "@league-of-foundry-developers/foundry-vtt-types": "^9.268.0",
    "@types/cli-table": "^0.3.0",
    "@types/colors": "^1.2.1",
    "@types/deep-freeze-strict": "^1.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^17.0.23",
    "@types/prettier": "^2.4.3",
    "@types/sharp": "^0.29.5",
    "@types/source-map-support": "^0.5.4",
    "@types/svgo": "^2.6.1",
    "@types/terminal-kit": "^1.28.4",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsdoc": "^37.8.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-lodash": "^7.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-sort-class-members": "^1.14.1",
    "eslint-plugin-tsdoc": "^0.2.14"
  },
  "dependencies": {
    "cli-table": "^0.3.11",
    "deep-freeze-strict": "^1.1.1",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.0.1",
    "jsonpath-plus": "^6.0.1",
    "lodash-es": "^4.17.21",
    "prettier": "^2.3.0",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.30.2",
    "source-map-support": "^0.5.21",
    "svgo": "^2.5.0",
    "terminal-kit": "^2.4.0",
    "ts-node": "^10.5.0",
    "tslog": "^3.3.3",
    "ttypescript": "^1.5.13",
    "typed-regex": "^0.0.8",
    "typedoc": "^0.22.13",
    "typescript": "^4.7.0-dev.20220331",
    "typescript-json-schema": "^0.53.0",
    "typescript-transform-paths": "^3.3.1",
    "yaml": "^2.0.1"
  }
}
